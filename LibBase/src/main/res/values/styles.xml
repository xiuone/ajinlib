<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>
    <style name="ToolbarLayout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
    </style>

    <style name="ToolbarBackIv" >
        <item name="android:src">@drawable/ic_icon_black_back</item>
        <item name="android:paddingLeft">@dimen/dp_12</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">@dimen/dp_36</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingTop">@dimen/dp_12</item>
        <item name="android:paddingBottom">@dimen/dp_12</item>
    </style>

    <style name="ToolbarTitleTv" >
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/gray_3333</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_60</item>
        <item name="android:layout_marginRight">@dimen/dp_60</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_18</item>
    </style>


    <style name="ToolbarRightIv" >
        <item name="android:src">@drawable/ic_icon_black_back</item>
        <item name="android:paddingRight">@dimen/dp_12</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">@dimen/dp_32</item>
        <item name="android:layout_height">@dimen/dp_40</item>
    </style>


    <style name="toolbarTvRight" parent="ToolbarRightIv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">@dimen/dp_12</item>
        <item name="android:background">@drawable/button_toorbar_right</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:paddingLeft">@dimen/dp_12</item>
        <item name="android:paddingRight">@dimen/dp_12</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="Transparent" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowNoTitle">true</item>
    </style>


</resources>