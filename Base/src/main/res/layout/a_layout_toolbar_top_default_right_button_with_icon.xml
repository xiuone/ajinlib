<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ToolbarLayout">
    <ImageView
        android:id="@+id/back_iv_button"
        style="@style/ToolbarBackIv"/>
    <TextView
        android:id="@+id/middle_title"
        style="@style/ToolbarTitleTv"/>
    <LinearLayout
        android:id="@+id/right_l_button"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingHorizontal="@dimen/dp_15"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/more_button"
            android:padding="@dimen/dp_0"
            android:layout_width="@dimen/dp_15"
            android:layout_height="@dimen/dp_15"
            style="@style/ToolbarRightIv"/>
        <TextView
            android:layout_marginLeft="@dimen/dp_5"
            android:id="@+id/toolbar_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:padding="@dimen/dp_0"
            android:text="确定" />
    </LinearLayout>

    <View
        android:id="@+id/title_line"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/color_line1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"/>
</RelativeLayout>