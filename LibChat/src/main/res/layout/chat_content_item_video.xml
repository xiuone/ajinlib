<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/chat_content_time"/>
    <LinearLayout
        android:id="@+id/receive_layout"
        android:paddingHorizontal="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/chat_content_head"/>
        <FrameLayout
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100">
            <com.xy.base.widget.image.circle.RoundImageView
                android:id="@+id/receive_image_iv"
                app:round_image_radius="@dimen/dp_8"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                tools:src="@color/gray_6666"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:background="@drawable/gray_9999_88_radius_100_bg"
                android:src="@drawable/ic_play"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"/>
        </FrameLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/send_layout"
        android:paddingHorizontal="@dimen/dp_15"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_marginRight="@dimen/dp_6"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_100">
            <com.xy.base.widget.image.circle.RoundImageView
                android:id="@+id/send_image_iv"
                app:round_image_radius="@dimen/dp_8"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                tools:src="@color/gray_6666"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <ImageView
                android:background="@drawable/gray_9999_88_radius_100_bg"
                android:src="@drawable/ic_play"
                android:layout_gravity="center"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"/>
        </FrameLayout>
        <include layout="@layout/chat_content_head"/>
    </LinearLayout>
</LinearLayout>