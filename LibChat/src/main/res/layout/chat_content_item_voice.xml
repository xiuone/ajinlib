<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <include layout="@layout/chat_content_time"/>
    <LinearLayout
        android:id="@+id/receive_layout"
        android:paddingHorizontal="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/chat_content_head"/>
        <com.xy.base.widget.shadow.view.ShadowLinearLayout
            app:hl_arrow_height="@dimen/dp_4"
            app:hl_arrow_width="@dimen/dp_8"
            app:hl_arrow_is_center="false"
            app:hl_arrow_direction="leftTop"
            app:hl_backgroundColor="#29B2EF"
            app:hl_shadowColor="#29B2EF"
            app:hl_shadowLimit="@dimen/dp_2"
            app:hl_cornerRadius="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_6"
            android:minHeight="@dimen/dp_40"
            android:minWidth="@dimen/dp_50"
            android:gravity="center_vertical"
            android:paddingHorizontal="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.xy.base.widget.voice.VoiceImageView
                android:id="@+id/receive_voice_view"
                android:src="@drawable/anim_voice_whitle"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
            <TextView
                android:id="@+id/receive_voice_time_tv"
                android:text="11"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="''"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </com.xy.base.widget.shadow.view.ShadowLinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/send_layout"
        android:paddingHorizontal="@dimen/dp_15"
        android:gravity="right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xy.base.widget.shadow.view.ShadowLinearLayout
            app:hl_arrow_height="@dimen/dp_4"
            app:hl_arrow_width="@dimen/dp_8"
            app:hl_arrow_is_center="false"
            app:hl_arrow_direction="rightTop"
            app:hl_backgroundColor="#66A370"
            app:hl_shadowColor="#66A370"
            app:hl_shadowLimit="@dimen/dp_2"
            app:hl_cornerRadius="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_6"
            android:minHeight="@dimen/dp_40"
            android:minWidth="@dimen/dp_50"
            android:gravity="center_vertical|right"
            android:paddingHorizontal="@dimen/dp_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/send_voice_time_tv"
                android:text="11"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="''"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <com.xy.base.widget.voice.VoiceImageView
                android:id="@+id/sned_voice_view"
                android:rotation="180"
                android:src="@drawable/anim_voice_whitle"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"/>
        </com.xy.base.widget.shadow.view.ShadowLinearLayout>
        <include layout="@layout/chat_content_head"/>
    </LinearLayout>
</LinearLayout>